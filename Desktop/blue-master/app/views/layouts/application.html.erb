<!DOCTYPE html>
<html>
<head>
  <title>ComAIdian</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="<%= controller_name %>">
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to(root_path, class: 'navbar-brand navbar-logo') do %>
        Com<span class="logo-ai">AI</span>dian
      <% end %>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to('Recommend Jokes', jokes_path) %></li>
        <li><%= link_to('Visual Data', visualization_path) %></li>
        <li><%= link_to('About Us', about_us_path) %></li>

        <% if user_signed_in? %>
            <li>
              <%= link_to(edit_user_registration_path) do %>
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                <%= current_user.email %>
              <% end %>
            </li>
            <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
        <% else %>
            <li><%= link_to 'Login', new_user_session_path %></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </nav>

  <div class="<% unless @full_width %>container<% end %>">
    <% if notice %>
        <p class="notice alert alert-info" role="alert"><%= notice %></p>
    <% end %>
    <% if alert %>
        <p class="alert alert-danger" role="alert"><%= alert %></p>
    <% end %>
    <% if @page_title %>
        <h1 class="bold text-center page-title"><%= @page_title %></h1>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
